@model ContatoModel
@{
    ViewData["Title"] = "Confirmação para apagar contato";
}

<div class="text-center">
    <h3>Deseja apagar o contato (@Model.Nome)?</h3>
</div>
<a class="btn btn-primary" role="button" asp-action="Index" asp-controller="Contato">Cancelar exclusão</a>
<a class="btn btn-primary" role="button" asp-action="Apagar" asp-controller="Contato" asp-route-id="@Model.Id">Confirmar exclusão</a>